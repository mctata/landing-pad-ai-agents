# API keys for AI providers
OPENAI_API_KEY=your_openai_api_key_here
OPENAI_ORG_ID=your_openai_org_id_here
ANTHROPIC_API_KEY=your_anthropic_api_key_here

# Database configuration
MONGODB_URI=mongodb://localhost:27017/landing_pad_ai_agents
MONGODB_DATABASE=landing_pad_ai_agents

# JWT configuration 
JWT_SECRET=your_jwt_secret_here
JWT_EXPIRY=1h
JWT_REFRESH_SECRET=your_refresh_token_secret_here
JWT_REFRESH_EXPIRY=7d

# Server configuration
PORT=3000
NODE_ENV=development
LOG_LEVEL=info

# CORS configuration
CORS_ORIGINS=http://localhost:3000,http://localhost:3001,https://yourdomain.com

# Security configuration
RATE_LIMIT_WINDOW=900000   # 15 minutes in milliseconds
RATE_LIMIT_MAX=100         # Max requests per window
TRUSTED_IPS=127.0.0.1      # Comma-separated list of trusted IPs that bypass rate limiting
SESSION_SECRET=your_session_secret_here
CSRF_TOKEN_SECRET=your_csrf_secret_here
DISABLE_AUTH=false         # Only set to true in development for testing
DISABLE_CSRF=false         # Only set to true in development for testing
DISABLE_CSP=false          # Only set to true in development for testing
COOKIE_SECRET=your_cookie_secret_here
COOKIE_DOMAIN=localhost    # Set to your domain in production
COOKIE_SECURE=false        # Set to true in production

# UI configuration 
REACT_APP_API_URL=http://localhost:3000/api
UI_PORT=3001

# Admin configuration
ADMIN_PASSWORD=change_this_password_in_production
ADMIN_EMAIL=admin@example.com

# File storage
STORAGE_PATH=./storage

# Message queue
RABBITMQ_URI=amqp://localhost

# Caching configuration
REDIS_URL=redis://localhost:6379

# Monitoring
HEALTH_CHECK_INTERVAL=60000    # 1 minute in milliseconds
PERFORMANCE_SAMPLE_RATE=0.1    # Sample 10% of requests for performance metrics