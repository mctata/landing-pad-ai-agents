# API keys for AI providers
OPENAI_API_KEY=your_openai_api_key_here
OPENAI_ORG_ID=your_openai_org_id_here
ANTHROPIC_API_KEY=your_anthropic_api_key_here

# Database configuration
MONGODB_URI=mongodb://localhost:27017/landing_pad_ai_agents
MONGODB_DATABASE=landing_pad_ai_agents

# JWT configuration 
JWT_SECRET=your_jwt_secret_here
JWT_EXPIRY=1h
JWT_REFRESH_SECRET=your_refresh_token_secret_here
JWT_REFRESH_EXPIRY=7d

# Server configuration
PORT=3000
NODE_ENV=development
LOG_LEVEL=info

# CORS configuration
CORS_ORIGINS=http://localhost:3000,http://localhost:3001,https://yourdomain.com

# Security configuration
RATE_LIMIT_WINDOW=900000   # 15 minutes in milliseconds
RATE_LIMIT_MAX=100         # Max requests per window
TRUSTED_IPS=127.0.0.1      # Comma-separated list of trusted IPs that bypass rate limiting
SESSION_SECRET=your_session_secret_here
CSRF_TOKEN_SECRET=your_csrf_secret_here
DISABLE_AUTH=false         # Only set to true in development for testing
DISABLE_CSRF=false         # Only set to true in development for testing
DISABLE_CSP=false          # Only set to true in development for testing
COOKIE_SECRET=your_cookie_secret_here
COOKIE_DOMAIN=localhost    # Set to your domain in production
COOKIE_SECURE=false        # Set to true in production

# UI configuration 
REACT_APP_API_URL=http://localhost:3000/api
UI_PORT=3001

# Admin configuration
ADMIN_PASSWORD=change_this_password_in_production
ADMIN_EMAIL=admin@example.com

# File storage
STORAGE_PATH=./storage

# Message queue
RABBITMQ_URI=amqp://localhost

# Caching configuration
REDIS_URL=redis://localhost:6379

# Monitoring
HEALTH_CHECK_INTERVAL=60000    # 1 minute in milliseconds
PERFORMANCE_SAMPLE_RATE=0.1    # Sample 10% of requests for performance metrics
METRICS_PORT=9090              # Port for Prometheus metrics server
DISABLE_PERFORMANCE_MONITORING=false
METRICS_COLLECTION_INTERVAL=15000  # 15 seconds between default metrics collection
HIGH_LATENCY_THRESHOLD=500     # 500ms threshold for high latency warnings
CONTENT_GEN_RATE_LIMIT_WINDOW=3600000  # 1 hour window for content generation rate limiting
CONTENT_GEN_RATE_LIMIT_MAX=30  # Max 30 requests per hour for content generation

# Integration: CMS - Contentful
CONTENTFUL_SPACE_ID=your_contentful_space_id
CONTENTFUL_DELIVERY_API_KEY=your_contentful_delivery_api_key
CONTENTFUL_MANAGEMENT_API_KEY=your_contentful_management_api_key
CONTENTFUL_ENVIRONMENT=master
CONTENTFUL_ENABLED=true

# Integration: CMS - WordPress
WORDPRESS_API_URL=https://yoursite.com/wp-json/wp/v2
WORDPRESS_USERNAME=your_wordpress_username
WORDPRESS_PASSWORD=your_wordpress_application_password
WORDPRESS_ENABLED=false

# Integration: CMS - Shopify
SHOPIFY_STORE_URL=your-store.myshopify.com
SHOPIFY_ACCESS_TOKEN=your_shopify_access_token
SHOPIFY_API_VERSION=2023-04
SHOPIFY_ENABLED=false

# Integration: Social - Twitter/X
TWITTER_API_KEY=your_twitter_api_key
TWITTER_API_SECRET=your_twitter_api_secret
TWITTER_ACCESS_TOKEN=your_twitter_access_token
TWITTER_ACCESS_SECRET=your_twitter_access_secret
TWITTER_ENABLED=false

# Integration: Social - Bluesky
BLUESKY_IDENTIFIER=your_bluesky_username.bsky.social
BLUESKY_PASSWORD=your_bluesky_app_password
BLUESKY_ENABLED=false

# Integration: Social - LinkedIn
LINKEDIN_CLIENT_ID=your_linkedin_client_id
LINKEDIN_CLIENT_SECRET=your_linkedin_client_secret
LINKEDIN_ACCESS_TOKEN=your_linkedin_access_token
LINKEDIN_ENABLED=false

# Integration: Analytics - Google Analytics
GOOGLE_ANALYTICS_PROPERTY_ID=your_ga_property_id
GOOGLE_ANALYTICS_CLIENT_EMAIL=your_ga_service_account_email
GOOGLE_ANALYTICS_PRIVATE_KEY=your_ga_service_account_private_key
GOOGLE_ANALYTICS_ENABLED=false