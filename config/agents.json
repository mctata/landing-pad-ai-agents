{
  "contentStrategy": {
    "id": "content-strategy",
    "name": "Content Strategy Agent",
    "description": "Analyses audience data and trends to inform content decisions",
    "modules": {
      "trendAnalyzer": {
        "enabled": true,
        "settings": {
          "updateFrequency": "daily",
          "dataSources": ["industry-news", "social-media", "search-trends"],
          "relevanceThreshold": 0.6
        }
      },
      "audienceInsights": {
        "enabled": true,
        "settings": {
          "segmentCount": 5,
          "updateFrequency": "weekly",
          "minDataPoints": 100
        }
      },
      "briefGenerator": {
        "enabled": true,
        "settings": {
          "defaultTemplate": "standard",
          "keywordCount": 5,
          "briefLength": "medium"
        }
      }
    }
  },
  "contentCreation": {
    "id": "content-creation",
    "name": "Content Creation Agent",
    "description": "Generates high-quality blog posts, website copy, and social media content",
    "modules": {
      "blogGenerator": {
        "enabled": true,
        "settings": {
          "defaultWordCount": 1200,
          "headingStyle": "sentence-case",
          "includeFeaturedImage": true
        }
      },
      "socialMediaGenerator": {
        "enabled": true,
        "settings": {
          "platforms": ["twitter", "linkedin", "facebook"],
          "imagesPerPost": 1,
          "hashtagLimit": 3
        }
      },
      "websiteCopyGenerator": {
        "enabled": true,
        "settings": {
          "pageTypes": ["home", "about", "features", "pricing", "contact"],
          "ctaStyle": "action-oriented",
          "tonality": "professional"
        }
      },
      "headlineGenerator": {
        "enabled": true,
        "settings": {
          "style": "benefit-driven",
          "maxLength": 60,
          "abTestingEnabled": true
        }
      },
      "contentEditor": {
        "enabled": true,
        "settings": {
          "grammarCheckLevel": "strict",
          "styleSuggestions": true,
          "toneConsistencyCheck": true
        }
      }
    }
  },
  "contentManagement": {
    "id": "content-management",
    "name": "Content Management Agent",
    "description": "Organises, categorises, and tracks content across platforms",
    "modules": {
      "contentCategoriser": {
        "enabled": true,
        "settings": {
          "taxonomyDepth": 3,
          "minConfidenceScore": 0.7,
          "autoTagging": true
        }
      },
      "contentTracker": {
        "enabled": true,
        "settings": {
          "platforms": ["website", "blog", "social"],
          "updateFrequency": "hourly",
          "notificationEnabled": true
        }
      },
      "freshnessChecker": {
        "enabled": true,
        "settings": {
          "freshnessThreshold": 90,
          "contentTypes": ["blog", "product-page", "landing-page"],
          "priorityCategories": ["features", "pricing"]
        }
      },
      "workflowManager": {
        "enabled": true,
        "settings": {
          "stages": ["draft", "review", "approved", "scheduled", "published"],
          "autoProgressEnabled": false,
          "reminderFrequency": "daily"
        }
      }
    }
  },
  "optimisation": {
    "id": "optimisation",
    "name": "Optimisation Agent",
    "description": "Analyses performance metrics and provides SEO recommendations",
    "modules": {
      "seoOptimizer": {
        "enabled": true,
        "settings": {
          "keywordDensityTarget": 2.0,
          "titleLengthRange": [40, 60],
          "metaDescriptionLengthRange": [120, 160],
          "headingStructureCheck": true
        }
      },
      "performanceAnalyzer": {
        "enabled": true,
        "settings": {
          "metrics": ["pageviews", "time-on-page", "bounce-rate", "conversion-rate"],
          "benchmarkSource": "industry-average",
          "timeframeOptions": ["day", "week", "month", "quarter"]
        }
      },
      "abTestingGenerator": {
        "enabled": true,
        "settings": {
          "elementTypes": ["headline", "cta", "hero-image", "form"],
          "variationsPerElement": 3,
          "minTestDuration": 7,
          "significanceThreshold": 0.05
        }
      },
      "metricsTracker": {
        "enabled": true,
        "settings": {
          "trackingFrequency": "hourly",
          "storageRetention": 365,
          "alertThresholds": {
            "trafficDrop": 30,
            "conversionDrop": 15,
            "engagementDrop": 20
          }
        }
      },
      "reporting": {
        "enabled": true,
        "settings": {
          "automatedReports": ["daily-summary", "weekly-detailed", "monthly-comprehensive"],
          "distributionList": ["team", "management"],
          "visualizationsEnabled": true
        }
      }
    }
  },
  "brandConsistency": {
    "id": "brand-consistency",
    "name": "Brand Consistency Agent",
    "description": "Maintains Landing Pad Digital's voice, tone, and messaging",
    "modules": {
      "consistencyChecker": {
        "enabled": true,
        "settings": {
          "toneAttributes": ["professional", "helpful", "clear", "authoritative"],
          "strictnessLevel": 3,
          "autoFlagEnabled": true
        }
      },
      "terminologyChecker": {
        "enabled": true,
        "settings": {
          "glossarySource": "brand-terminology",
          "caseSensitive": true,
          "suggestionEnabled": true
        }
      },
      "consistencyFixer": {
        "enabled": true,
        "settings": {
          "autoFixLevel": "suggestion",
          "priorityIssues": ["incorrect-terminology", "tone-mismatch", "messaging-conflict"],
          "explanationsEnabled": true
        }
      },
      "alignedGenerator": {
        "enabled": true,
        "settings": {
          "referenceContent": "brand-exemplars",
          "alignmentStrength": 0.8,
          "preserveKeyMessages": true
        }
      }
    }
  }
}
